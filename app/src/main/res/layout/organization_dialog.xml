<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_120"
    android:paddingTop="@dimen/padding_120">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0067b8"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_5"
        android:paddingTop="@dimen/padding_10">

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/selectOrganization"
            android:textColor="#fff"
            android:textSize="@dimen/textsize_20" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="@dimen/width_90"
            android:layout_height="@dimen/hight_45"
            android:layout_alignParentRight="true"
            android:background="@drawable/custombuttonpopup"
            android:padding="@dimen/padding_10"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            android:textSize="@dimen/textsize_20" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_2"
        android:layout_below="@+id/rl_header"
        android:background="@color/white_color" />

    <ListView
        android:id="@+id/list_organisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:background="#0067b8">

    </ListView>
</RelativeLayout>
