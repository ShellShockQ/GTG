<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/layout_170"
        android:layout_height="@dimen/layout_170"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/logo_512" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center"
        android:text="Please enter Your Username or email address.You will recieve a link to create a new password via email."
        android:textSize="@dimen/textsize_17" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/rounded_edittext"
        android:hint="E-mail address"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_5"


        android:textColor="@color/black_color"
        android:textColorHint="@color/gray_color" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/custombutton"
        android:text="SEND"
        android:textSize="@dimen/textsize_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/returnimg"
            android:layout_width="@dimen/width_30"
            android:layout_height="@dimen/width_30"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_action" />

        <TextView
            android:id="@+id/tvreturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/returnimg"
            android:padding="@dimen/padding_5"
            android:text="Return to Login"
            android:textSize="@dimen/textsize_20" />


    </RelativeLayout>

</LinearLayout>