<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Backdrop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/teamboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#001325"
        app:theme="@style/Toolbar_Theme"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/game_board_title"
            android:text="@string/game_board_title"
            android:textColor="#fff"
            android:textSize="20sp"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/VisitorTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintEnd_toEndOf="@+id/awayteamlogo"
        app:layout_constraintStart_toStartOf="@+id/awayteamlogo"
        app:layout_constraintTop_toTopOf="@+id/Backdrop"
        tools:text="Essex"/>

    <ImageView
        android:id="@+id/awayteamlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hometeamlogo"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/VisitorTeamName"
        app:srcCompat="@drawable/teamknvp"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp"/>


    <TextView
        android:id="@+id/HomeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintEnd_toEndOf="@+id/hometeamlogo"
        app:layout_constraintStart_toStartOf="@+id/hometeamlogo"
        app:layout_constraintTop_toTopOf="@+id/Backdrop"
        tools:text="North Bay"/>

    <ImageView
        android:id="@+id/hometeamlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/HomeTeamName"
        app:srcCompat="@drawable/teama"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp"/>

    <TextView
        android:id="@+id/VisitorTeamMascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintEnd_toEndOf="@+id/awayteamlogo"
        app:layout_constraintStart_toStartOf="@+id/awayteamlogo"
        app:layout_constraintTop_toBottomOf="@+id/awayteamlogo"
        tools:text="Lions"/>

    <TextView
        android:id="@+id/HomeTeamMascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintEnd_toEndOf="@+id/hometeamlogo"
        app:layout_constraintStart_toStartOf="@+id/hometeamlogo"
        app:layout_constraintTop_toBottomOf="@+id/hometeamlogo"
        tools:text="Guardian Angels"/>

    <TextView
        android:id="@+id/tv_HomeTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/_0"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/HomeTeamMascot"
        app:layout_constraintStart_toStartOf="@+id/HomeTeamMascot"
        app:layout_constraintTop_toBottomOf="@+id/HomeTeamMascot"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="102dp"/>

    <TextView
        android:id="@+id/Period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/period"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintBottom_toTopOf="@+id/tv_GamePeriod"
        app:layout_constraintEnd_toStartOf="@+id/tv_AwayTeamScore"
        app:layout_constraintStart_toEndOf="@+id/tv_HomeTeamScore"
        tools:layout_conversion_absoluteHeight="20dp"
        tools:layout_conversion_absoluteWidth="27dp"
        tools:text="Period"/>

    <TextView
        android:id="@+id/tv_HomeTeamPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/totalPledges"
        app:layout_constraintEnd_toEndOf="@+id/tv_HomeTeamScore"
        app:layout_constraintStart_toStartOf="@+id/tv_HomeTeamScore"
        app:layout_constraintTop_toBottomOf="@+id/tv_HomeTeamScore"
        tools:layout_conversion_absoluteHeight="23dp"
        tools:layout_conversion_absoluteWidth="65dp"
        tools:text="$15.00"/>


    <TextView
        android:id="@+id/tv_GamePeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custombuttontextview"
        android:gravity="center"
        android:text="@string/_1"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/Period"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Period"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_conversion_absoluteWidth="102dp"
        tools:text="2"/>


    <TextView
        android:id="@+id/tv_AwayTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/VisitorTeamMascot"
        app:layout_constraintStart_toStartOf="@+id/VisitorTeamMascot"
        app:layout_constraintTop_toBottomOf="@+id/VisitorTeamMascot"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="102dp"/>


    <TextView
        android:id="@+id/totalPledges"
        android:layout_width="114dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Backdrop"
        app:layout_constraintEnd_toStartOf="@+id/Backdrop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Backdrop"
        tools:layout_conversion_absoluteHeight="39dp"
        tools:layout_conversion_absoluteWidth="110dp"
        tools:text="Total Pledges"/>


    <TextView
        android:id="@+id/tv_AwayTeamPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="2"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/totalPledges"
        app:layout_constraintEnd_toEndOf="@+id/tv_AwayTeamScore"
        app:layout_constraintStart_toStartOf="@+id/tv_AwayTeamScore"
        app:layout_constraintTop_toBottomOf="@+id/tv_AwayTeamScore"
        tools:layout_conversion_absoluteHeight="23dp"
        tools:layout_conversion_absoluteWidth="66dp"
        tools:text="$45.00"/>


    <TextView
        android:id="@+id/YourPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_15"
        app:layout_constraintEnd_toStartOf="@+id/pledges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalPledges"
        tools:text="Your Pledges"/>

    <TextView
        android:id="@+id/pledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/YourPledges"
        app:layout_constraintTop_toBottomOf="@+id/totalPledges"
        tools:text="$0.00"/>

    <Button
        android:id="@+id/paynow"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_dollor_button"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_$2"
        tools:text="Donate Now"/>


    <Button
        android:id="@+id/btnundolastpledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_pledge"
        android:text="@string/undo_last_pledge"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_$5"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_dollor_button"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/YourPledges"
        tools:text="$5"/>

    <Button
        android:id="@+id/btn_$1"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_dollor_button"
        android:text="$1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_$2"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/YourPledges"
        tools:text="$1"/>

    <Button
        android:id="@+id/btn_$2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_dollor_button"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_$5"
        app:layout_constraintTop_toBottomOf="@+id/YourPledges"
        tools:text="$3"/>

    <android.support.constraint.Group
        android:id="@+id/pledgeButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_$5,btn_$2,btn_$1"/>


</ android.support.constraint.ConstraintLayout>