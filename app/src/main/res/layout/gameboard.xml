<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Activity.GameBoardActivity">

    <ImageView
        android:id="@+id/Backdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/teamboard"
        app:layout_constraintBottom_toTopOf="@+id/GLTotalPledges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#001325"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Toolbar_Theme">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/game_board_title"
            android:text="@string/game_board_title"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>
    <!-- Home Team -->
    <TextView
        android:id="@+id/HomeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/hometeamlogo"
        app:layout_constraintEnd_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toTopOf="@+id/Backdrop"
        tools:text="North Bay"/>

    <ImageView
        android:id="@+id/hometeamlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/GLTeamLogo"
        app:layout_constraintEnd_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:srcCompat="@drawable/teama"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp"/>

    <TextView
        android:id="@+id/HomeTeamMascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance"
        app:layout_constraintEnd_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/hometeamlogo"
        tools:text="Guardian Angels"/>

    <TextView
        android:id="@+id/tv_HomeTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/_0"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/GLScore"
        app:layout_constraintEnd_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/HomeTeamMascot"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="102dp"/>

    <TextView
        android:id="@+id/tv_HomeTeamPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/GLTotalPledges"
        app:layout_constraintEnd_toStartOf="@+id/totalPledges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GLTotalPledges"
        tools:layout_conversion_absoluteHeight="23dp"
        tools:layout_conversion_absoluteWidth="65dp"
        tools:text="$15.00"/>

    <!--Visitor Team -->
    <TextView
        android:id="@+id/VisitorTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/awayteamlogo"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toTopOf="@+id/Backdrop"
        tools:text="Essex"/>

    <ImageView
        android:id="@+id/awayteamlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/GLTeamLogo"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:srcCompat="@drawable/teamknvp"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp"/>

    <TextView
        android:id="@+id/VisitorTeamMascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/com_facebook_likeboxcountview_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/HomeTeamMascot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        tools:text="Lions"/>

    <TextView
        android:id="@+id/tv_AwayTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/GLScore"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toBottomOf="@+id/VisitorTeamMascot"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="102dp"/>

    <TextView
        android:id="@+id/tv_AwayTeamPledges"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="2"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/totalPledges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toTopOf="@+id/totalPledges"
        tools:layout_conversion_absoluteHeight="23dp"
        tools:layout_conversion_absoluteWidth="66dp"
        tools:text="$45.00"
        />

    <!-- Scoreboard Elements -->
    <TextView
        android:id="@+id/Period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/period"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/GLScore"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/GLTeamLogo"
        tools:text="Period"/>

    <TextView
        android:id="@+id/tv_GamePeriod"
        android:layout_width="31dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custombuttontextview"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/GLScore"
        app:layout_constraintEnd_toEndOf="@+id/Backdrop"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toBottomOf="@+id/Period"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_conversion_absoluteWidth="102dp"
        tools:layout_editor_absoluteY="245dp"
        tools:text="2"/>

    <TextView
        android:id="@+id/totalPledges"
        android:layout_width="114dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/GLTotalPledges"
        app:layout_constraintEnd_toEndOf="@+id/GLVerticalCenter"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toTopOf="@+id/GLTotalPledges"
        tools:layout_conversion_absoluteHeight="39dp"
        tools:layout_conversion_absoluteWidth="110dp"
        tools:text="Total Pledges"
        />


    <TextView
        android:id="@+id/YourPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        tools:text="Your Pledges"/>

    <TextView
        android:id="@+id/pledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        tools:text="$0.00"/>

    <Button
        android:id="@+id/btnpaynow"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_dollor_button"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        android:visibility="gone"
        tools:text="Donate Now"/>

    <Button
        android:id="@+id/btnundolastpledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_pledge"
        android:text="@string/undo_last_pledge"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/PledgeButton3"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_dollor_button"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PledgeButton2"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        tools:text="$5"/>

    <Button
        android:id="@+id/PledgeButton1"
        android:layout_width="126dp"
        android:layout_height="40sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_dollor_button"
        android:text="$1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PledgeButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        tools:text="$1"/>

    <Button
        android:id="@+id/PledgeButton2"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_dollor_button"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/GLVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/GLVerticalCenter"
        app:layout_constraintTop_toBottomOf="@+id/Backdrop"
        tools:text="$3"/>

    <android.support.constraint.Group
        android:id="@+id/pledgeButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="PledgeButton1,PledgeButton2,PledgeButton3"/>

    <!-- Guidelines -->
    <android.support.constraint.Guideline
        android:id="@+id/GLTeamLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="704dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="199dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/GLVerticalCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:layout_marginEnd="391dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="206dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/GLScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="275dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/GLTotalPledges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="711dp"
        android:layout_marginEnd="411dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.502052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>